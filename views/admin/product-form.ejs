<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/forms.css">
    <link rel="stylesheet" href="/css/product.css">
</head>

<body>
   <%- include('../includes/navigation.ejs') %>

    <main>
        <form class="product-form" action="<%= isEditing && (product !== null) ? '/admin/edit-product' : '/admin/add-product' %>" method="POST">
            <div class="form-control">
                <label for="title">Title</label>
                <input type="text" name="title" id="title" value=<% if(isEditing && product !== null) { %> '<%= product.title %>' <% } else { %> '' <% } %>>
            </div>
            <div class="form-control">
                <label for="imageUrl">Image URL</label>
                <input type="text" name="imageUrl" id="imageUrl" value=<% if(isEditing && product !== null) { %> '<%= product.imageUrl %>' <% } else { %> '' <% } %>>
            </div>
            <div class="form-control">
                <label for="price">Price</label>
                <input type="number" name="price" id="price" step="0.01" value="<%= isEditing && (product !== null) ? product.price : '' %>">
            </div>
            <% if (isEditing && product !== null) { %>
                <input type="hidden" name="productId" value="<%= product.id %>">
            <% } %>
            <div class="form-control">
                <label for="description">Description</label>
                <textarea name="description" id="description" rows="5"><%= product !== null ? product.description : '' %></textarea>
            </div>

            <!-- <% if(isEditing) { %>
                <button class="btn" type="submit">Update Product</button>
            <% } else { %>
                <button class="btn" type="submit">Add Product</button>
            <% } %> -->

            <button class="btn" type="submit"><%= isEditing ? "Update Product" : "Add Product" %></button>

        </form>
    </main>
<%- include('../includes/end.ejs') %>